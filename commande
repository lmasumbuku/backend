from fastapi import FastAPI, Request
from fastapi.middleware.cors import CORSMiddleware

app = FastAPI()

# (OPTIONNEL mais recommandé) Autoriser CORS si Voiceflow fait des requêtes depuis un autre domaine
app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],  # à sécuriser plus tard
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

@app.post("/commande")
async def recevoir_commande(request: Request):
    data = await request.json()
    print("✅ Nouvelle commande reçue :", data)
    return {"status": "ok"}
